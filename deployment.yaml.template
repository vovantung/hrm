apiVersion: apps/v1
kind: Deployment
metadata:
  name: hrm
  labels:
    app: hrm
spec:
  replicas: 1
  selector:
    matchLabels:
      app: hrm
  template:
    metadata:
      labels:
        app: hrm
    spec:
      containers:
        - name: hrm
          image: 211125364313.dkr.ecr.ap-southeast-1.amazonaws.com/hrm:__VERSION__
          imagePullPolicy: Always
          ports:
            - containerPort: 8080
      imagePullSecrets:
        - name: ecr-secret
---
apiVersion: v1
kind: Service
metadata:
  name: hrm
spec:
  selector:
    app: hrm
  ports:
    - protocol: TCP
      port: 8080
      targetPort: 8080
  type: ClusterIP

